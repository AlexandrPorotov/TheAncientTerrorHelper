<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.10.xsd">

    <changeSet id="v1:1" author="Dale">
        <createTable tableName="abilities">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="knowledge" type="INTEGER"/>
            <column name="communication" type="INTEGER"/>
            <column name="attention" type="INTEGER"/>
            <column name="force" type="INTEGER"/>
            <column name="will" type="INTEGER"/>
            <column name="detective_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1:2" author="Dale">
        <createTable tableName="detectives">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)" />
            <column name="profession" type="VARCHAR(50)"/>
            <column name="action" type="VARCHAR(255)"/>
            <column name="ability" type="VARCHAR(255)"/>
            <column name="phrase" type="VARCHAR(255)"/>
            <column name="fiscalHealth" type="INTEGER"/>
            <column name="mentalHealth" type="INTEGER"/>
        </createTable>
    </changeSet>

    <changeSet id="v1:3" author="Dale">
        <addForeignKeyConstraint baseTableName="abilities"
                                 baseColumnNames="detective_id"
                                 constraintName="fk_abilities_detective"
                                 referencedTableName="detectives"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>